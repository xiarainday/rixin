<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/jbshape" >
    
    <TextView
        android:layout_marginTop="30dip"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日发电量:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_jrfdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0kWh"
        android:layout_gravity="right"
        android:textSize="24sp" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="#dddddd" />
    
    <TextView
        android:layout_marginTop="30dip"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电站状态:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_dzzt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正常   4/5 总数"
        android:layout_gravity="right"
        android:textSize="24sp" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="#dddddd" />

    <TextView
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月发电量:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_yfdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:text="0.00MWh"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="180dip"
        android:background="#dddddd" />
    
    <TextView
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年发电量:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_nfdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:text="0.00MWh"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="180dip"
        android:background="#dddddd" />
    
    <TextView
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="累	计:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_lj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:text="0.00MWh"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="180dip"
        android:background="#dddddd" />
    
    <TextView
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发电所容量:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_fdsrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:text="0.00MWh"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#dddddd" />

    <Button
        android:id="@+id/btn_dzlb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="电站列表" />

</LinearLayout>
